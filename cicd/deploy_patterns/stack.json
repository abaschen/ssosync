{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
    "Description": "This CloudFormation template will deploy an instance of the SSOSync-Staging candidate releases (via privately shared app in the AWS Serverless Application Repository (SAR) within the Staging Account.",
    "Parameters": {
        "AppArn": {
            "Description": "The candidate release in the SAR",
            "Default": "arn:aws:serverlessrepo:<AWS::Region>:<AccountId>:applications/<ApplicationName>",
            "Type": "String"
        },
        "AppVersion": {
            "Description": "The version of this build in SAR",
            "Default": "v1.0.0-rc.10",
            "Type": "String"
        },
        "ParameterPrefix": {
            "Type": "String",
            "Default": "/SSOSync/"
        },
        "SecretPrefix": {
            "Type": "String",
            "Default": "ssosync/"
        },
        "GoogleCredentialsArn": {
            "Type": "String"
        },
        "GoogleAdminEmailParam": {
            "Type": "String",
            "Default": "/SSOSync/aws/AdminEmail"
        },
        "SCIMEndpointUrlParam": {
            "Type": "String",
            "Default": "/SSOSync/aws/SCIMEndpointUrl"
        },
        "SCIMAccessTokenArn": {
            "Type": "String"
        },
        "RegionParam": {
            "Type": "String",
            "Default": "/SSOSync/aws/Region"
        },
        "IdentityStoreIdParam": {
            "Type": "String",
            "Default": "/SSOSync/aws/IdentityStoreId"
        },
        "GroupMatch": {
            "Description": "The search string to match Groups in Google Workspace",
            "Default": "name:AWS*",
            "Type": "String"
        }
    },
    "Resources": {
        "SARApp": {
            "Type": "AWS::Serverless::Application",
            "Properties": {
                "Location": {
                    "ApplicationId": {
                        "Ref": "AppArn"
                    },
                    "SemanticVersion": {
                        "Ref": "AppVersion"
                    }
                },
                "Parameters": {
                    "ParameterPrefix": { "Ref": "ParameterPrefix"},
                    "SecretPrefix": { "Ref": "SecretPrefix"},
                    "GoogleCredentials": {
                        "Fn::Join": [
                            "",
                            [
                                "{{resolve:secretsmanager:",
                                {
                                    "Ref": "GoogleCredentialsArn"
                                },
                                "}}"
                            ]
                        ]
                    },
                    "GoogleAdminEmail": {
                        "Fn::Join": [
                            "",
                            [
                                "{{resolve:ssm:",
                                {
                                    "Ref": "GoogleAdminEmailParam"
                                },
                                "}}"
                            ]
                        ]
                    },
                    "SCIMEndpointUrl": {
                        "Fn::Join": [
                            "",
                            [
                                "{{resolve:ssm:",
                                {
                                    "Ref": "SCIMEndpointUrlParam"
                                },
                                "}}"
                            ]
                        ]
                    },
                    "SCIMEndpointAccessToken": {
                        "Fn::Join": [
                            "",
                            [
                                "{{resolve:secretsmanager:",
                                {
                                    "Ref": "SCIMAccessTokenArn"
                                },
                                "}}"
                            ]
                        ]
                    },
                    "Region": {
                        "Fn::Join": [
                            "",
                            [
                                "{{resolve:ssm:",
                                {
                                    "Ref": "RegionParam"
                                },
                                "}}"
                            ]
                        ]
                    },
                    "IdentityStoreID": {
                        "Fn::Join": [
                            "",
                            [
                                "{{resolve:ssm:",
                                {
                                    "Ref": "IdentityStoreIdParam"
                                },
                                "}}"
                            ]
                        ]
                    },
                    "SyncMethod": "groups",
                    "GoogleGroupMatch": {
                        "Ref": "GroupMatch"
                    },
                    "LogLevel": "warn",
                    "LogFormat": "json"
                }
            }
        }
    },
    "Outputs": {
        "SSOSyncArn": {
            "Description": "The Arn of the deployed lambda function",
            "Value": {
                "Fn::GetAtt": [
                    "SARApp",
                    "Outputs.FunctionArn"
                ]
            }
        }
    }
}